            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (280*qu);
            if (i==2) p[order_count].cost += (150*qu);
            // if (i==3) p[order_count].cost += (650*qu);
            // if (i==4)p[order_count].cost += (330*qu);

            break;
        }
        case 13 :
        {
            printf ("Enter the size : 1. Large 2. Small \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (780*qu);
            if (i==2) p[order_count].cost += (680*qu);
            // if (i==3) p[order_count].cost += (550*qu);
            // if (i==4)p[order_count].cost += (290*qu);

            break;
        }
        case 14 :
        {
            printf ("Enter the size : 1. Large 2. Small  \n\n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (750*qu);
            if (i==2) p[order_count].cost += (500*qu);
            // if (i==3) p[order_count].cost += (400*qu);
            // if (i==4)p[order_count].cost += (330*qu);

            break;
        }
        case 15 :
        {
            printf ("Enter the size : 1. 1 Bowl 2. 1.5 Bowl \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (600*qu);
            if (i==2) p[order_count].cost += (800*qu);
            // if (i==3) p[order_count].cost += (450*qu);
            // if (i==4)p[order_count].cost += (350*qu);

            break;
        }
        case 16 :
        {
            printf ("Enter the size : 1. 1 Layer 2. 2 Layer \n");
            int i;
            scanf ("%d", &i);
            getchar();

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (280*qu);
            if (i==2) p[order_count].cost += (140*qu);
            // if (i==3) p[order_count].cost += (800*qu);
            // if (i==4)p[order_count].cost += (400*qu);

            break;
        }
        case 17 :
        {
            printf ("Enter the size : 1. 1 Layer 2. 2 Layer\n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (300*qu);
            if (i==2) p[order_count].cost += (150*qu);
            break;
        }
        case 18 :
        {
            printf ("Coke  : 1 Glass\n");

            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;
            p[order_count].cost += (30*qu);
            break;
        }
        case 19 :
        {
            printf ("Water  : 1. 2 ltr 2. 1 ltr 3. 1/2 ltr \n");
            int i;
            scanf ("%d", &i);
            getchar();
            printf ("Please enter the quantity: ");
            scanf ("%d", &qu);
            getchar();

            p[order_count].number_of_food +=qu;

            if (i==1) p[order_count].cost += (30*qu);
            if (i==2) p[order_count].cost += (20*qu);
            if (i==3) p[order_count].cost += (15*qu);
            break;
        }
        default :
        {
            printf ("Invalid selection try again\n");
            n++;
        }
        }
    }
    char temp;
    int discount;
    printf ("Do you want to order anything else?(y/n)\n ");
    scanf("%c", &temp);
    if (temp == 'y')
        goto level;
    printf ("\nNumber of food ordered %d\n", p[order_count].number_of_food);
    if(p[order_count].cost>=3000)
    {
        discount=(p[order_count].cost*20)/100;
        p[order_count].cost=p[order_count].cost-discount;
    }
    printf ("\nThank you %s for your order. Your bill is %dtk.\n", p[order_count].name, p[order_count].cost);
    order_count ++;
     printf ("\nPress any key to go to previous page and then confrim your order %s!\n", p[order_count].name);
    getch();
    Mood_On();
}
void receive_Mood_On()
{
    system("cls");
    if (order_count==0)
    {
        return receive_Mood_On();
    }
    gotoxy(53,8);
    printf ("Congo!!!Your order confirmed!!\n");
    gotoxy(53,9);
    printf ("Order no. %d by %s from Mood On will be delivered by your given address. Thank you!\n", p[served_count].order_number, p[served_count].name);
    gotoxy(53,10);
    printf ("Total order taken: %d\n", (order_count));
    gotoxy(53,11);
    printf ("Enjoy your meal\n\n");
    served_count++;
    gotoxy(53,12);
    printf ("Press any key to give your feedback\n\n");
    gotoxy(53,13);
    getch();
    rating();
}
