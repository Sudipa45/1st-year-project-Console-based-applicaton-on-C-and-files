void  Nawabs_kitchen()
{
    fflush(stdin);
    int option = 1, x = 52;
    char ch = '0';
    while (1)
    {
        switch (ch)
        {
        case 77:
            option++;
            if (option == 5)
                option = 1;
            break;
        case 75:
            option--;
            if (option == 0)
                option = 4;
            break;
        }

        h_light_rs(option);
        ch = getch();
        if (ch == 13)
        {
            switch (option)
            {
            case 1:
                return menu_Nawabs_kitchen();
            case 2:
                return receive_Nawabs_kitchen();
            case 3:
                return  main_system();
            case 4:
                return makerinfo();
            }
        }
    }
}
